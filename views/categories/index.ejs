<%- include('../partials/head'); %>
<body>
    <%- include('../partials/header'); %>

    <div style="margin-top: 100px;">

    </div>
   
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="w-75 text-center">
            <h1 class="my-4">Categorías</h1>
            <a href="/categories/add" class="btn btn-primary mb-4">Agregar Nueva Categoría</a>

            <ul class="list-group">
                <% categories.forEach(category => { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><%= category.nombre %></span>
                        <div>
                            <a href="/categories/edit/<%= category.id %>" class="btn btn-warning btn-sm me-2">Editar</a>
                            <form action="/categories/delete/<%= category.id %>" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        </div>
                    </li>
                <% }); %>
            </ul>
        </div>
    </div>

    <%- include('../partials/footer'); %>
</body>
</html>
