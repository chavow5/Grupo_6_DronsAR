
<%- include('partials/head') %>
<style>
    .bg-custom {
    background-color: #B1CCE0;
}
</style>
<body>
    <%- include('partials/header') %>

    <!-- Page Header Start -->
    <div class="container-fluid bg-secondary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center bg-custom" style="min-height: 300px;">
            <h1 class="font-weight-semi-bold text-uppercase mb-3">Contacto</h1>
            <div class="d-inline-flex">
                <p class="m-0"><a href="">Home</a></p>
                <p class="m-0 px-2">-</p>
                <p class="m-0">Mensaje enviado</p>
            </div>
        </div>
    </div>
    <!-- Page Header End -->


    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="card shadow-lg" style="width: 30rem;">
            <div class="card-body text-center">
                <!-- Imagen de confirmación -->
                <img src="/img/confirmacion.png" width="100px" alt="Success" class="img-fluid mb-4">
                
