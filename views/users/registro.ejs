<body>
    <div class="container">
        <div class="login-box">
            <div class="logo-login">
                <img src="/img/DRONSAR_PROP-10.svg" class="login-image" alt="Logo">
            </div>
            <h1>Bienvenido</h1>
            <p>¿Ya tienes una cuenta? <a href="/login">Inicia sesión</a></p>
            <form name="registrationForm" id="registrationForm" action="/users/register" method="POST" enctype="multipart/form-data" novalidate="novalidate">
                <div class="control-group mb-3">
                    <input type="text" class="form-control" name="nombres" id="name" placeholder="Tu Nombre" required="required" data-validation-required-message="Por favor, ingresa tu nombre" />
                    <% if (typeof errors !== 'undefined' && errors.nombres) { %>
                        <p class="help-block text-danger"><%= errors.nombres.msg %></p>
                      <% } %>
                </div>
                <div class="control-group mb-3">
                    <input type="text" class="form-control" name="apellidos" id="surname" placeholder="Tu Apellido" required="required" data-validation-required-message="Por favor, ingresa tu apellido" />
                    <% if (typeof errors !== 'undefined' && errors.apellidos) { %>
                        <p class="help-block text-danger"><%= errors.apellidos.msg %></p>
                    <% } %>
                </div>
                <div class="control-group mb-3">
                    <input type="email" class="form-control" name="email" id="email" placeholder="Tú Email" required="required" data-validation-required-message="Por favor, ingresa tu email" />
                    <% if (typeof errors !== 'undefined' && errors.email) { %>
                        <p class="help-block text-danger"><%= errors.email.msg %></p>
                    <% } %>
                </div>
                <div class="control-group mb-3">
                    <input type="password" class="form-control" name="password" id="password" placeholder="Contraseña" required="required" data-validation-required-message="Por favor, ingresa una contraseña" />
                    <% if (typeof errors !== 'undefined' && errors.password) { %>
                        <p class="help-block text-danger"><%= errors.password.msg %></p>
                    <% } %>
                </div>
                <div class="control-group mb-3">
                    <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Confirmar Contraseña" required="required" data-validation-required-message="Por favor, confirma tu contraseña" />
                    <% if (typeof errors !== 'undefined' && errors.confirmPassword) { %>
                        <p class="help-block text-danger"><%= errors.confirmPassword.msg %></p>
                    <% } %>
                </div>
                <div class="control-group mb-3">
                    <input type="file" class="form-control" name="profileImage" id="profileImage" />
                    <% if (typeof errors !== 'undefined' && errors.profileImage) { %>
                        <p class="help-block text-danger"><%= errors.profileImage.msg %></p>
                    <% } %>
                </div>
                <div>
                    <button class="btn btn-primary py-2 px-4" type="submit" id="registerButton">Registrarse</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function validateForm() {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirm-password').value;

            if (password !== confirmPassword) {
                alert('Las contraseñas no coinciden');
                return false;
            }
            return true;
        }
    </script>

