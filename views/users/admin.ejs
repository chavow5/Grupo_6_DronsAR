<body>
  <%- include('../partials/header'); %>

  <h1>Gestión de Roles de Usuarios</h1>

  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Rol Actual</th>
        <th>Cambiar Rol</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.nombres %> <%= user.apellidos %></td>
          <td><%= user.email %></td>
          <td><%= user.rol %></td>
          <td>
            <a href="/users/admin">Panel de Administración</a>
            <form action="/users/change-role" method="POST">
              <input type="hidden" name="userId" value="<%= user.id %>">
              <select name="newRole">
                <option value="user" <%= user.rol === 'user' ? 'selected' : '' %>>User</option>
                <option value="admin" <%= user.rol === 'admin' ? 'selected' : '' %>>Admin</option>
              </select>
              <button type="submit">Cambiar Rol</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <%- include('../partials/footer'); %>
  <%- include('../partials/script'); %>

</body>
</html>
