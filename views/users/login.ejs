<%- include('../partials/head') %>

<body>
  <div class="container">
      <div class="login-box">
        <div class="logo-login">
          <img src="/img/DRONSAR_PROP-10.svg" class="login-image" alt="Logo">
        </div>
        <h1>Bienvenido de nuevo</h1>
        <p>¿No tienes una cuenta? <a href="registro">Crea una cuenta</a></p>
        <form action="/users/login" method="POST">
          <div class="input-group">
             <label for="email">Correo electrónico:</label>
             <input type="email" id="email" name="email" placeholder="Email" required>
          </div>
          <div class="input-group">
             <label for="password">Contraseña:</label>
             <input type="password" id="password" name="password" placeholder="Password" required>
          </div>
          <div class="checkbox">
             <input type="checkbox" id="remember" name="remember">
             <label for="remember">Recordar cuenta</label>
          </div>
          <div class="olvido-contraseña">
             <a href="#">¿Has olvidado tu contraseña?</a>
          </div>
          <button type="submit">Iniciar sesión</button>
       </form>
       
        <div class="social-login">
          <p>O continuar con:</p>
          <a href="#" class="social-link"> <i class="fab fa-google"></i> Google </a>
          <a href="#" class="social-link"> <i class="fab fa-facebook"></i> Facebook </a>
          <a href="#" class="social-link"> <i class="fab fa-apple"></i> Apple </a>
        </div>  
      </div>
      
    
  </div>
</body>
</html>