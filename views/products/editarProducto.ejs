<%- include('../partials/head'); %>

    <body>
        <%- include('../partials/header'); %>

            <!--================Edit Product Area =================-->
            <div class="product_image_area section_padding">
                <div class="container">
                    <div class="row s_product_inner justify-content-between">
                        <div class="col-lg-7 col-xl-7">
                            <div class="product_slider_img text-center">
                                <div id="vertical">
                                    <div data-thumb="<%= dron.image %>">
                                        <img src="<%= dron.image %>" class="img-fluid" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-5 col-xl-4">
                            <div class="s_product_text">
                                <h3>Editar Producto</h3>
                                <form action="/productos/editar/<%= dron.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                                    <div class="form-group">
                                      <label for="nombre">Nombre:</label>
                                      <input type="text" class="form-control" id="nombre" name="nombre" value="<%= dron.nombre %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="marca">Marca:</label>
                                        <input type="text" class="form-control" id="marca" name="marca"
                                            value="<%= dron.marca %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="modelo">Modelo:</label>
                                        <input type="text" class="form-control" id="modelo" name="modelo"
                                            value="<%= dron.modelo %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="descripcion">Descripción:</label>
                                        <textarea class="form-control" id="descripcion" name="descripcion"
                                            required><%= dron.descripcion %></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="categoria">Categoría:</label>
                                        <input type="text" class="form-control" id="categoria" name="categoria"
                                            value="<%= dron.categoria %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="precio">Precio:</label>
                                        <input type="number" class="form-control" id="precio" name="precio" step="0.01"
                                            value="<%= dron.precio %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="peso">Peso:</label>
                                        <input type="text" class="form-control" id="peso" name="peso"
                                            value="<%= dron.peso %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="duracionBateria">Duración Batería:</label>
                                        <input type="text" class="form-control" id="duracionBateria"
                                            name="duracionBateria" value="<%= dron.duracionBateria %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="camara">Cámara:</label>
                                        <input type="text" class="form-control" id="camara" name="camara"
                                            value="<%= dron.camara %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="tipoSensores">Tipo de Sensores:</label>
                                        <input type="text" class="form-control" id="tipoSensores" name="tipoSensores"
                                            value="<%= dron.tipoSensores %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="altura">Altura:</label>
                                        <input type="text" class="form-control" id="altura" name="altura"
                                            value="<%= dron.altura %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="velocidad">Velocidad:</label>
                                        <input type="text" class="form-control" id="velocidad" name="velocidad"
                                            value="<%= dron.velocidad %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="descuento">Descuento:</label>
                                        <input type="number" class="form-control" id="descuento" name="descuento"
                                            step="0.01" value="<%= dron.descuento %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="image">Imagen</label>
                                        <input type="file" id="image" name="image" class="form-control">
                                        <input type="hidden" name="currentImage" value="<%= dron.image %>">
                                      </div>
                                      <input type="hidden" name="_method" value="PUT">
                                      <button type="submit" class="btn btn-primary">Actualizar</button>
                                    </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--================End Edit Product Area =================-->

            <%- include('../partials/footer'); %>
                <%- include('../partials/script'); %>

    </body>

    </html>