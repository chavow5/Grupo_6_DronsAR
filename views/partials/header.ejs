<header class="navbar navbar-expand-lg navbar-dark fixed-top">
    <a class="navbar-brand" href="/">
        <img src="/img/logo-DronsAR.png" alt="Logo" class="img-fluid" style="max-width: 150px;">
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <i class="fas fa-bars"></i>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mx-auto">
            <li class="nav-item">
                <a class="nav-link" href="/">Inicio</a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="/productos" id="productosDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Productos
                </a>
                <div class="dropdown-menu" aria-labelledby="productosDropdown">
                    <a class="dropdown-item" href="/productos">Todos los productos</a>
                    <a class="dropdown-item" href="/productos/add">Crear un producto</a>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/about">Nosotros</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/contact">Contacto</a>
            </li>
        </ul>
        <div class="icons d-none d-lg-flex ml-auto">
            <a href="#" class="icon">
                <i class="fas fa-search"></i>
            </a>
            <a href="/login" class="icon">
                <i class="fas fa-user"></i>
            </a>
            <% if (user) { %>
                <div class="dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="welcomeDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Bienvenido, <%= user.nombres %>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="welcomeDropdown">
                        <a class="dropdown-item" href="/users/perfil">Perfil</a>
                        <form action="/users/logout" method="POST" class="d-inline">
                            <button type="submit" class="dropdown-item">Cerrar sesión</button>
                        </form>
                    </div>
                </div>
            <% } %>
            <a href="/carrito-compra" class="icon" id="icon-carrito">
                <i class="fas fa-shopping-cart">
                    <span class="badge badge-light">3</span>
                </i>
            </a>
        </div>
        <div class="d-lg-none">
            <div class="icons-mobile text-center mt-3">
                <a href="#" class="icon">
                    <i class="fas fa-search"></i>
                </a>
                <a href="/login" class="icon">
                    <i class="fas fa-user"></i>
                </a>
                <% if (user) { %>
                    <div class="dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="welcomeDropdownMobile" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Bienvenido, <%= user.nombres %>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="welcomeDropdownMobile">
                            <a class="dropdown-item" href="/users/perfil">Perfil</a>
                            <form action="/users/logout" method="POST" class="d-inline">
                                <button type="submit" class="dropdown-item">Cerrar sesión</button>
                            </form>
                        </div>
                    </div>
                <% } %>
                <a href="/carrito-compra" class="icon" id="icon-carrito">
                    <i class="fas fa-shopping-cart">
                        <span class="badge badge-light">3</span>
                    </i>
                </a>
            </div>
        </div>
    </div>
</header>
